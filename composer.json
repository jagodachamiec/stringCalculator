{
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^0.11.16",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "doctrine/coding-standard": "^6.0"
    },
    "require": {
        "php": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyze -l max src tests"
        ],
        "phpunit": [
            "./vendor/bin/phpunit --fail-on-warning"
        ],
        "tests": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    }
}
